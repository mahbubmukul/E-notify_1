<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.devbd.devmukul.e_notify.Activities.ProjectSetupActivity"
    tools:showIn="@layout/activity_project_setup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROJECT NAME"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/project_name"
                    style="@style/CustomEditTextLogInSignUpNormal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:hint="Project Name"
                    android:inputType="textPersonName"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHORT DESCRIPTION"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/short_desc"
                    style="@style/CustomEditTextLogInSignUpNormal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:hint="Short Description"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LONG DESCRIPTION"
                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:textColor="#666666"/>

                <EditText
                    android:id="@+id/long_desc"
                    style="@style/CustomEditTextLogInSignUpNormal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:hint="Long Description"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="8dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="PROJECT START DATE"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/project_start_date"
                    style="@style/CustomEditTextLogInSignUpNormal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Project Start Date"
                    android:inputType="number"
                    android:drawableRight="@mipmap/calendar"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="PROJECT END DATE"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/project_end_date"
                    style="@style/CustomEditTextLogInSignUpNormal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Project End Date"
                    android:inputType="number"
                    android:drawableRight="@mipmap/calendar"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_facebook"
                    android:text="Cancel"
                    android:textColor="#FFF"
                    android:layout_marginRight="5dp"/>

                <Button

                    android:id="@+id/submit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_accent"
                    android:text="Submit"
                    android:textColor="#FFF"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>
